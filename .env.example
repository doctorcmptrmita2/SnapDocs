# Database (Docker PostgreSQL)
DATABASE_URL="postgresql://repodocs:repodocs_secret_2024@localhost:5432/repodocs"

# Redis (Docker Redis)
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Domain (for subdomain routing)
NEXT_PUBLIC_DOMAIN="repodocs.dev"

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# GitHub Webhook Secret (random string)
GITHUB_WEBHOOK_SECRET="generate-random-secret-here"

# Easypanel Integration (Optional - for automatic domain management)
# Get API token from Easypanel: Settings > API Tokens
# Use either the default URL or your custom domain
EASYPANEL_URL="https://lc58dd.easypanel.host"
EASYPANEL_TOKEN="your-easypanel-api-token"
EASYPANEL_PROJECT="repodocs"
EASYPANEL_SERVICE="app"

# Nginx Automation (Optional - for automatic SSL and domain management)
# Enable automatic SSL certificate creation and Nginx configuration
NGINX_ENABLED="false"
NGINX_MAIN_DOMAIN="yourdomain.com"
NGINX_SSL_PATH="/etc/letsencrypt/live"
NGINX_CONFIG_PATH="/etc/nginx/sites-available"
CERTBOT_EMAIL="admin@yourdomain.com"
