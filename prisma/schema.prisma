generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  plan          Plan      @default(HOBBY)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// SnapDoc Models
enum Plan {
  HOBBY
  PRO
  TEAM
}

model Project {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  repoFullName    String   // owner/repo format
  branch          String   @default("main")
  docsPath        String   @default("/docs")
  customDomain    String?  @unique
  domainVerified  Boolean  @default(false)
  isPrivate       Boolean  @default(false)
  webhookId       Int?
  webhookSecret   String?
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions        Version[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([repoFullName])
}

model Version {
  id        String   @id @default(cuid())
  name      String   // v1.0.0, main, develop
  type      VersionType
  ref       String   // git ref (branch name or tag)
  isDefault Boolean  @default(false)
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([projectId, ref])
  @@index([projectId])
}

enum VersionType {
  BRANCH
  TAG
}

// Analytics Models
model PageView {
  id        String   @id @default(cuid())
  projectId String
  path      String
  version   String?
  referrer  String?
  userAgent String?
  country   String?
  createdAt DateTime @default(now())

  @@index([projectId])
  @@index([projectId, createdAt])
  @@index([projectId, path])
}

model DailyStats {
  id        String   @id @default(cuid())
  projectId String
  date      DateTime @db.Date
  views     Int      @default(0)
  visitors  Int      @default(0)
  
  @@unique([projectId, date])
  @@index([projectId])
}
